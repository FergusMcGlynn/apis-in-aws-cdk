{
  "openapi": "3.0.0",
  "info": {
    "title": "Courses API",
    "version": "0.0.1"
  },
  "components": {
    "schemas": {
      "Course": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "name": {
            "type": "string"
          },
          "department": {
            "type": "string"
          }
        }
      }
    }
  },
  "paths": {
    "/courses": {
      "get": {
        "summary": "Returns a list of courses.",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Course"
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}